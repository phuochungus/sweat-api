{
  "name": "sweat-api",
  "version": "0.0.1",
  "description": "A fully-featured social media backend API built with NestJS",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-e2e.json --runInBand",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:setup-db": "ts-node -r tsconfig-paths/register scripts/setup-test-db.ts",
    "test:full": "npm run test:setup-db && cross-env NODE_ENV=test npm run test:e2e",
    "test:full:win": "npm run test:setup-db && set NODE_ENV=test&& npm run test:e2e",
    "test:infra:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:infra:down": "docker-compose -f docker-compose.test.yml down",
    "test:local": "npm run test:infra:up && npm run test:setup-db && cross-env NODE_ENV=test npm run test:e2e",
    "test:local:win": "npm run test:infra:up && npm run test:setup-db && set NODE_ENV=test&& npm run test:e2e",
    "prepare": "husky install || true",
    "dbm:run": "cd migrations && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:run -d ../ormconfig.migration.ts",
    "dbm:revert": "cd migrations && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:revert -d ../ormconfig.migration.ts",
    "dbm:generate": "cd migrations && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:create",
    "dbs:generate": "cd seeds && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:create",
    "dbs:run": "cd seeds && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:run -d ../ormconfig.seed.ts",
    "dbs:revert": "cd seeds && ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:revert -d ../ormconfig.seed.ts",
    "init:db": "ts-node -r tsconfig-paths/register scripts/init-db.ts",
    "deploy:dev": "ts-node -r tsconfig-paths/register scripts/deploy.ts development",
    "deploy:staging": "ts-node -r tsconfig-paths/register scripts/deploy.ts staging",
    "deploy:prod": "ts-node -r tsconfig-paths/register scripts/deploy.ts production",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "firebase-admin": "^13.2.0",
    "moment": "^2.30.1",
    "mysql2": "^3.12.0",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.6.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
