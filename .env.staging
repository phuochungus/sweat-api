# Staging Environment Configuration
PORT=3000
NODE_ENV=staging

# Database configuration
ORM_CONNECTION=postgres
ORM_HOST=${DB_HOST}
ORM_PORT=${DB_PORT}
ORM_USERNAME=${DB_USER}
ORM_PASSWORD=${DB_PASSWORD}
ORM_DB=${DB_NAME}
ORM_LOGGING=true
ORM_SYNCHRONIZE=false
ORM_CONNECTION_LIMIT=15

# AWS configuration for media storage
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}
AWS_S3_BUCKET=${S3_BUCKET_NAME}-staging
AWS_S3_PUBLIC_URL=https://${S3_BUCKET_NAME}-staging.s3.amazonaws.com
AWS_S3_CDN_URL=${CDN_URL}

# Firebase configuration for authentication
FIREBASE_SERVICE_ACCOUNT_KEY=${FIREBASE_SERVICE_ACCOUNT_KEY}

# Admin access token for secure admin operations
ADMIN_TOKEN=${ADMIN_TOKEN}